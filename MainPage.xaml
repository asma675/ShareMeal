<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FoodRescueApp.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Food Rescue"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Welcome Header -->
            <Frame BackgroundColor="White" HasShadow="True" CornerRadius="12" Padding="20">
                <StackLayout>
                    <Label Text="ðŸ½ï¸ Food Rescue" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#2E7D32" 
                           HorizontalOptions="Center"/>
                    <Label Text="Connecting surplus food with those in need" 
                           FontSize="16" 
                           TextColor="#666" 
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Frame Grid.Column="0" BackgroundColor="#E8F5E8" CornerRadius="12" Padding="16">
                    <StackLayout>
                        <Label Text="1,250+" FontSize="24" FontAttributes="Bold" TextColor="#2E7D32" HorizontalOptions="Center"/>
                        <Label Text="Meals Saved" FontSize="14" TextColor="#666" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
                <Frame Grid.Column="1" BackgroundColor="#FFF3E0" CornerRadius="12" Padding="16">
                    <StackLayout>
                        <Label Text="45+" FontSize="24" FontAttributes="Bold" TextColor="#F57C00" HorizontalOptions="Center"/>
                        <Label Text="Partners" FontSize="14" TextColor="#666" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Navigation Button -->
            <Button Text="View Partner Directory" 
                    BackgroundColor="#2E7D32" 
                    TextColor="White" 
                    CornerRadius="12" 
                    HeightRequest="50"
                    Clicked="OnPartnerDirectoryClicked"/>

        </StackLayout>
    </ScrollView>

</ContentPage>